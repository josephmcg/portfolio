    "@next/bundle-analyzer": "^15.1.3",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/node": "22.9.0",
    "@types/react": "18.3.12",
    "@types/react-dom": "18.3.1",
    "autoprefixer": "10.4.20",
