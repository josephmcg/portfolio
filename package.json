    "@heroicons/react": "latest",
    "@josephmcg/eslint-config-next": "^2.0.0",
    "@josephmcg/prettier-config": "^2.0.1",
    "@josephmcg/tsconfig": "^2.0.1",
    "@next/bundle-analyzer": "^15.3.2",
    "@next/eslint-plugin-next": "15.5.6",
    "@tailwindcss/postcss": "^4.1.18",
