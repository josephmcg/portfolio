{
  "name": "portfolio",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "type": "module",
  "packageManager": "pnpm@9.4.0",
  "scripts": {
    "\n============= Setup ==============": "",
    "prepare": "husky",
    "preinstall": "npx only-allow pnpm",
    "\n============== Dev ===============": "",
    "dev": "next dev",
    "build": "next build",
    "start": "serve out",
    "\n============== Lint ==============": "",
    "lint": "pnpm run '/^lint:.*/'",
    "lint:next": "next lint",
    "lint:tsc": "tsc --noEmit",
    "lint:prettier": "prettier --cache --check .",
    "lint:circular-dependency": "tsx scripts/lint-circular-dependencies.ts",
    "\n============= Script =============": "",
    "analyze": "cross-env \"ANALYZE=true\" next build",
    "lighthouse": "unlighthouse --site https://josephmcg.dev --no-cache"
  },
  "dependencies": {
    "next": "15.3.2",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@heroicons/react": "^2.2.0",
    "@josephmcg/eslint-config-next": "^1.2.0",
    "@josephmcg/prettier-config": "^1.0.3",
    "@josephmcg/tsconfig": "^1.0.1",
    "@next/bundle-analyzer": "^15.3.3",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/madge": "^5.0.3",
    "@types/node": "22.15.18",
    "@types/react": "19.1.4",
    "@types/react-dom": "19.1.5",
    "autoprefixer": "10.4.21",
    "clsx": "^2.1.1",
    "cross-env": "^7.0.3",
    "husky": "^9.1.7",
    "madge": "^8.0.0",
    "postcss": "8.5.3",
    "tailwindcss": "3.4.14",
    "tsx": "^4.19.4",
    "typescript": "5.8.3",
    "unlighthouse": "^0.16.3"
  }
}
